      "draft",
      "blocked",
      "on_hold"
    ],
    "in_refinement_tech": [
      "ready_for_development",
      "draft",
      "blocked",
      "on_hold"
    ],
    "on_hold": [
      "ready_for_refinement_ba",
      "ready_for_development",
      "cancelled"
    ],
    "qa_failed": [
      "ready_for_code_review",
      "in_development",
      "on_hold"
    ],
    "ready_for_approval": [
      "in_approval",
      "on_hold"
    ],
    "ready_for_code_review": [
      "in_code_review",
      "in_development",
      "on_hold"
    ],
    "ready_for_development": [
      "in_development",
