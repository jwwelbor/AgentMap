  "status_flow_version": "1.0",
  "status_metadata": {
    "blocked": {
      "blocks_feature": true,
      "color": "red",
      "description": "Temporarily blocked by external dependency",
      "phase": "any",
      "progress_weight": 0,
      "responsibility": "none"
    },
    "cancelled": {
      "blocks_feature": false,
      "color": "gray",
      "description": "Task abandoned or deprecated",
      "phase": "done",
      "progress_weight": 0,
      "responsibility": "none"
    },
    "changes_requested": {
      "blocks_feature": false,
      "color": "orange",
      "description": "Code review changes requested",
      "phase": "development",
      "progress_weight": 0.6,
      "responsibility": "agent"
    },
    "completed": {
      "blocks_feature": false,
