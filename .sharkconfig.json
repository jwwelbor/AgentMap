{
  "color_enabled": true,
  "default_agent": null,
  "default_epic": null,
  "json_output": false,
  "patterns": {
    "epic": {
      "file": [
        "^epic\\.md$"
      ],
      "folder": [
        "^E(?P<number>\\d{2})-(?P<slug>[a-z0-9-]+)$",
        "^(?P<epic_id>tech-debt|bugs|change-cards)$"
      ],
      "generation": {
        "format": "E{number:02d}-{slug}"
      }
    },
    "feature": {
      "file": [
        "^prd\\.md$",
        "^PRD_F(?P<number>\\d{2})-(?P<slug>.+)\\.md$",
        "^(?P<slug>[a-z0-9-]+)\\.md$"
      ],
      "folder": [
        "^E(?P<epic_num>\\d{2})-F(?P<number>\\d{2})-(?P<slug>[a-z0-9-]+)$",
        "^F(?P<number>\\d{2})-(?P<slug>[a-z0-9-]+)$"
      ],
      "generation": {
        "format": "E{epic:02d}-F{number:02d}-{slug}"
      }
    },
    "task": {
      "file": [
        "^T-E(?P<epic_num>\\d{2})-F(?P<feature_num>\\d{2})-(?P<number>\\d{3}).*\\.md$",
        "^(?P<number>\\d{3})-(?P<slug>.+)\\.md$",
        "^(?P<slug>.+)\\.prp\\.md$"
      ],
      "folder": [],
      "generation": {
        "format": "T-E{epic:02d}-F{feature:02d}-{number:03d}.md"
      }
    }
  },
  "special_statuses": {
    "_blocked_": [
      "blocked",
      "on_hold"
    ],
    "_complete_": [
      "completed",
      "cancelled"
    ],
    "_start_": [
      "draft",
      "ready_for_development"
    ]
  },
  "status_flow": {
    "blocked": [
      "ready_for_development",
      "ready_for_refinement_ba",
      "cancelled"
    ],
    "cancelled": [],
    "changes_requested": [
      "ready_for_code_review",
      "in_development",
      "on_hold"
    ],
    "completed": [],
    "draft": [
      "ready_for_refinement_ba",
      "cancelled",
      "on_hold"
    ],
    "in_approval": [
      "completed",
      "ready_for_qa",
      "ready_for_development",
      "ready_for_refinement_ba",
      "on_hold"
    ],
    "in_code_review": [
      "ready_for_qa",
      "changes_requested",
      "in_development",
      "ready_for_refinement_ba",
      "on_hold"
    ],
    "in_development": [
      "ready_for_code_review",
      "ready_for_refinement_ba",
      "blocked",
      "on_hold"
    ],
    "in_qa": [
      "ready_for_approval",
      "qa_failed",
      "in_development",
      "ready_for_refinement_ba",
      "blocked",
      "on_hold"
    ],
    "in_refinement_ba": [
